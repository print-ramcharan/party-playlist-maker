<!-- res/drawable/button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/spotify_green"/> <!-- Button background color (black) -->
    <stroke
        android:width="2dp"
        android:color="@color/spotify_green"/> <!-- Button border color (white) -->
    <corners android:radius="50dp"/> <!-- Optional: Corner radius for rounded corners -->
    <padding
        android:left="6dp"
        android:top="16dp"
        android:right="6dp"
        android:bottom="16dp"/> <!-- Optional: Padding inside the button -->
</shape>
