<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Track Image -->
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/track_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Track Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music_note_black" />
    </RelativeLayout>

    <!-- Added By Image outside the RelativeLayout -->

    <!-- Track Details -->
    <ImageView
        android:id="@+id/added_by_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="9dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:background="@drawable/background_circle_white"
        android:contentDescription="Added By Image"
         />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/track_name"
            android:text="Track Name"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/track_artist"
            android:text="Artist Name"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Voters Images -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/voter1_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="-9dp"
            android:scaleType="centerCrop"
            android:background="@drawable/background_circle_white"
            android:contentDescription="Voter Image 1" />

        <ImageView
            android:id="@+id/voter2_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            android:background="@drawable/background_circle_white"
            android:contentDescription="Voter Image 2" />
    </LinearLayout>

    <!-- Vote Details -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp">

        <!-- Vote Count -->
        <TextView
            android:id="@+id/vote_count"
            android:text="0"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <!-- Vote Button -->
        <Button
            android:id="@+id/vote_button"
            android:text="Vote"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textColor="#FF4081" />
    </LinearLayout>
</LinearLayout>
