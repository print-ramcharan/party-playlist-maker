<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/userProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_person"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <!-- User Name -->
    <TextView
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="User Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />



    <!-- User ID -->
    <TextView
        android:id="@+id/userIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ID: 12345"
        android:layout_marginBottom="8dp" />

    <!-- User Email -->
    <TextView
        android:id="@+id/userEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Email: user@example.com"
        android:layout_marginBottom="8dp" />

    <!-- Followers Count -->
    <TextView
        android:id="@+id/userFollowersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Followers: 0"
        android:layout_marginBottom="16dp" />

    <!-- Developer Details Section -->
    <TextView
        android:id="@+id/developerDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Developer: Ramcharan Teja Polabathina"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/contactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Contact"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/spotify_green"
        android:text="Logout"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="16dp" />

</LinearLayout>
